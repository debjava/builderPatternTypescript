{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./lib",
		"sourceMap": true,
		"typeRoots": [
			"node_modules/@types","./typings"
		],
		"lib": [
			"es2016",
			"es2017",
			"es2018"
		],
		"strict": false,
		"strictPropertyInitialization": false
	},
	"include": [
		"src"
	],
	"exclude": [
		"**/__tests__/*", "./typings/**/*"
	]
}